{
  "name": "synd",
  "version": "2.0.0",
  "description": "yet another rsync wrapper",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "rm -rf ./dist && tsc",
    "lint": "biome check src test",
    "preversion": "npm run test && npm run build",
    "postversion": "npm publish && git push --follow-tags",
    "types": "tsc --noEmit",
    "types:watch": "tsc --noEmit --watch",
    "coveralls": "npm run test -- --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "bin": {
    "synd": "./bin/synd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antonk52/synd.git"
  },
  "keywords": [
    "rsync",
    "cli"
  ],
  "author": "antonk52",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antonk52/synd/issues"
  },
  "homepage": "https://github.com/antonk52/synd#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/jest": "^29.0.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^22.14.0",
    "coveralls": "^3.0.11",
    "directory-tree": "^3.0.1",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  }
}
