{
  "name": "synd",
  "version": "1.0.0",
  "description": "yet another rsync wrapper",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest --run",
    "build": "rm -rf ./dist && tsc",
    "lint": "eslint src test --ext=.js,.ts",
    "preversion": "npm run test && npm run build",
    "postversion": "npm publish && git push --follow-tags",
    "types": "tsc --noEmit",
    "types:watch": "tsc --noEmit --watch",
    "coveralls": "npm run test -- --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "bin": {
    "synd": "./bin/synd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antonk52/synd.git"
  },
  "keywords": [
    "rsync",
    "cli"
  ],
  "author": "antonk52",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antonk52/synd/issues"
  },
  "homepage": "https://github.com/antonk52/synd#readme",
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "commander": "^8.3.0",
    "kleur": "^4.1.4",
    "lodash.debounce": "^4.0.8",
    "rsync": "^0.6.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^20.14.10",
    "@types/rimraf": "^3.0.0",
    "@types/rsync": "^0.4.30",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "coveralls": "^3.0.11",
    "directory-tree": "^3.0.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4",
    "vitest": "^2.0.1"
  }
}
